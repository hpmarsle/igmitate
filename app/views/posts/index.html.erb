
<% @posts.each do |p| %>
   <div>
        <%= link_to p.user.username, user_posts_path(p.user) %><br>
        <%= p.caption %><br>
        <% if p.hashtag %>
            #<%= p.hashtag.name %><br>
        <% end %>
        <%= link_to "Show", post_path(p) %>
        <% if p.user_id == current_user.id %>
            <a href="<%=edit_user_post_path(p.user_id, p.id)%>">Edit</a>
            <%= button_to "Delete Post", post_path(p), method: :delete %>
        <% end %>
        </p>
   </div>
<% end %>
